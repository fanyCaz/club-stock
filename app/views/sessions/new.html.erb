<% provide(:title, "Iniciar Sesión") %>
<h1>Iniciar Sesión</h1>

<div>
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
        <%= f.label :username %>
        <%= f.email_field :username, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.submit "Iniciar Sesión", class: "btn btn-primary" %>
    <% end %>

    <p> ¿Nuevo en Inventario?  <%= link_to "Regístrate", signup_path %></p>
</div>